using System;

class Program
{
    static void Main(string[] args)
    {
        Console.WriteLine("Привет. Что тебя порадует?");
        string userWishes = Console.ReadLine();
        Console.WriteLine("Сколько раз?");
        int numberOfRepetitions = Convert.ToInt32(Console.ReadLine());

        for (int endOfCycle = 0; endOfCycle < numberOfRepetitions; endOfCycle++)
        {
            Console.WriteLine(userWishes);
        }
    }
}
