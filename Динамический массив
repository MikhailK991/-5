using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace MK
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] userEnteredNumbers = new int[1];
            bool exitTheProgram = true;
            int sum = 0;

            while (exitTheProgram)
            {
                int enteredNumber = 0;
                const string sumOfNumbers = "Сумма";
                const string logoutByUser = "Выход";

                Console.WriteLine($"Вы можете поизвести высчисление суммы, нужных вам чисел.\nЧто бы получить общее число, пропишите: \"{sumOfNumbers}\". \nДля выхода, пропишите: \"{logoutByUser}\".");
                Console.Write("\n\nВведите число: ");
                string userEnteredData = Console.ReadLine();

                if (userEnteredData.ToLower() == logoutByUser.ToLower())
                {
                    exitTheProgram = false;
                }
                else if (userEnteredData.ToLower() == sumOfNumbers.ToLower())
                {
                    Console.WriteLine(sum);
                    sum = 0;
                }
                else
                {
                    enteredNumber = Convert.ToInt32(userEnteredData);
                }

                int[] arrayExpansion = new int[userEnteredNumbers.Length + 1];

                for (int i = 0; i < userEnteredNumbers.Length; i++)
                {
                    userEnteredNumbers[i] += enteredNumber;
                    arrayExpansion[i] = userEnteredNumbers[i];
                }
                arrayExpansion[arrayExpansion.Length - 1] = 0;
                userEnteredNumbers = arrayExpansion;

                sum += enteredNumber;

                Console.ReadKey();
                Console.Clear();
            }
        }
    }
}

