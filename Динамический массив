using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace MK
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] userEnteredNumbers = new int[1];
            bool exitTheProgram = true;
            int sum = 0;

            while (exitTheProgram)
            {
                string userEnteredData;
                int enteredNumber = 0;
                int[] arrayExpansion = new int[userEnteredNumbers.Length + 1];

                Console.WriteLine("Вы можете поизвести высчисление общей суммы нужных вам чисел.\nЧто бы получить общее число, напишите: \"Сумма\". \nEсли хотите выйти пропишите: \"Выход\"\n");
                Console.Write("\n\nВведите число: ");
                userEnteredData = Console.ReadLine();

                if (userEnteredData.ToLower() == "Выход".ToLower())
                {
                    exitTheProgram = false;
                }
                else if  (userEnteredData.ToLower() == "Сумма".ToLower())
                {
                    Console.WriteLine(sum);
                    sum = 0;
                }
                else 
                {
                    enteredNumber = Convert.ToInt32(userEnteredData);
                }

                for (int i = 0; i < userEnteredNumbers.Length; i++)
                {
                    userEnteredNumbers[i] += enteredNumber;
                    arrayExpansion[i] = userEnteredNumbers[i];
                }
                arrayExpansion[arrayExpansion.Length - 1] = 0;
                userEnteredNumbers = arrayExpansion;

                sum += enteredNumber;

                Console.ReadKey(); 
                Console.Clear();

            }
            
        }
    }
}

