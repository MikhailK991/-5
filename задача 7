using System;

class Program
{
    static void Main(string[] args)
    {
        Console.WriteLine("Приветствую тебя! Сколько у тебя золотых монет?");
        string goldCoins = Console.ReadLine();
        Console.WriteLine("Сколько кристаллов ты хочешь купить? За 1 кристалл возьму 1 золотую!");
        string buyingCrystais = Console.ReadLine();
        int gold = Convert.ToInt32(goldCoins);
        int crystal = Convert.ToInt32(buyingCrystais);
        int purchaseGold = gold - crystal;
        Console.WriteLine("У вас остолось " + purchaseGold + " золотых.");
        Console.WriteLine("У вас есть " + crystal + " кристаллов.");
    }
}
