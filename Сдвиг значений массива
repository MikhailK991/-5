using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Учеба

{
    class Program
    {
        static void Main(string[] args) 
        {
            int[] books = new int[] { 11, 12, 13, 14, 15 };
            Console.WriteLine("Исходный массив:\n");

            foreach (int number in books)
            {
                Console.Write(number + " ");

            }
            Console.Write("\n\nНа сколько вы хотите сдвинуть массив: ");
            int numberToShift = Convert.ToInt16(Console.ReadLine());
            Console.WriteLine("\n");

            for (int i = 0; i < numberToShift; i++)
            {
                int firstNumber = books[0];

                for (int j = 0; j < books.Length - 1; j++)
                {
                    books[j] = books[j + 1];
                }
                books[books.Length - 1] = firstNumber;
            }

            Console.WriteLine("Новый массив: \n");

            foreach (int number in books)
            {
                Console.Write(number + " ");
            }

            Console.ReadKey();

        }
    }
}
