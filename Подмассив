using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace MK
{
    class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int minimumValue = 0;
            int maximumValue = 10;

            int[] number = new int[100];
            int maximumNumberOfRepetitions = 0;
            int elementNumber = 0;
            int repeat = 0;

            for (int i = 0; i < number.Length; i++)
            {
                number[i] = random.Next(minimumValue, maximumValue);
            }

            Console.WriteLine();

            for (int i = 1; i < number.Length; i++)
            {
                if (number[i] == number[i - 1])
                {
                    repeat++;
                }
                else
                {
                    repeat = 0;
                }

                if (repeat >= maximumNumberOfRepetitions)
                {
                    elementNumber = i;
                    maximumNumberOfRepetitions = repeat;
                }
            }

            for (int i = 0; i < number.Length; i++)
            {
                if (i % 10 == 0)
                {
                    Console.WriteLine();
                }

                if (i >= (elementNumber - maximumNumberOfRepetitions) && i <= elementNumber)
                {
                    Console.ForegroundColor = ConsoleColor.Green;
                    Console.Write(number[i] + " ");
                    Console.ForegroundColor = ConsoleColor.Gray;
                }
                else
                {
                    Console.Write(number[i] + " ");
                }
            }

            Console.WriteLine($"\n\nНачало повтора: {elementNumber - maximumNumberOfRepetitions} \nОкончание повтора: {elementNumber} \nДлина: {maximumNumberOfRepetitions + 1} \nЗначение: {number[elementNumber]}");

            Console.ReadKey();
        }

    }
}
