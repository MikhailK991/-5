using System;

class Program
{
    static void Main(string[] args)
    {
        string surname = "Колодин";
        string name = "Петр";
        Console.WriteLine($"{name} {surname}");
        Console.WriteLine("Ошибка.");
        (name, surname) = (surname, name);
        Console.WriteLine($"{name} {surname}");
        Console.ReadLine();
    }
}
