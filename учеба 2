using System;

class Program
{
    static void Main(string[] args)
    {
        int beginningOfWork = 5;
        int numberOfDays = 100;
        int dayOff = 7;

        for(int stepCycle = beginningOfWork; stepCycle < numberOfDays; stepCycle += dayOff)
        {
            Console.WriteLine(stepCycle);
        }
        // есть четкие границы цикла, поэтому выбран for
    }
}
